#!/bin/bash

# for automatic compiling

if [ -L $0 ] ; then
  DIR=$(dirname $(readlink -f $0)) ;
else
  DIR=$(dirname $0) ;
fi
cd $DIR

git pull

grep -r --exclude='TODO' --exclude='work' "TODO" * > TODO
wc -l TODO
echo

tmux new-session -d -s tex
tmux new-window -t tex:2 -n 'latexmk' 'latexmk -pvc -pdf document.tex'
tmux new-window -t tex:3 -n 'log' 'vim document.log'
tmux select-window -t tex:1
tmux attach-session -t tex

#git commit -a -m "automatic commit"
git commit -a
git push
